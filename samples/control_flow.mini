// Tests while loops, if-else statements, and comparison operators
fun main(): Unit {
    var i: Int = 0
    var sum: Int = 0

    while (i <= 10) {
        if (i % 2 == 0) {
            // Add even numbers
            sum = sum + i
        } else {
            // Subtract odd numbers
            sum = sum - i
        }
        i = i + 1
    }

    println(sum) // 2 + 4 + 6 + 8 + 10 - 1 - 3 - 5 - 7 - 9 = 5
}